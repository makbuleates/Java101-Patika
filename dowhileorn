import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int sayi, sum=0;

        do {
            System.out.print("Bir sayı girin:");
            sayi= input.nextInt();
            if((sayi%2==0)&&(sayi%4==0)){
                sum+=sayi;
            }
        }while (sayi%2==0);

        System.out.print("Sayılar toplamı:" + sum);
    }
}
